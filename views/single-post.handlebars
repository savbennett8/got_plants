<article class="post">
    {{!-- {{> post-info post }} --}}
    <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        {{#if post_url}}
        <span>({{post_url}})</span>
        {{/if}}
    </div>
    <div class="body">
        <p>
            {{post_body}}
        </p>
    </div>
    <div class="meta">
        Created by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>

    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>
        <div>
            <button type="submit">Add comment</button>
        </div>
    </form>
    {{/if}}
    {{!-- {{> comments post.comments }} --}}
    <div class="comments">
        {{#each this}}
        <section class="comment">
            <div class="meta">
                {{user.username}} on {{format_date created_at}}
            </div>
            <div class="text">
                {{comment_body}}
            </div>
        </section>
        {{/each}}
    </div>
</article>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}